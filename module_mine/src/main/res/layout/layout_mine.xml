<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smart.refresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mineRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F5F5F5"
    app:srlEnablePreviewInEditMode="true"
    app:srlEnableLoadMoreWhenContentNotFull="false"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/mineFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/bannerBg"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:background="@drawable/banner_bg"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include layout="@layout/floating_header" />

                <com.aries.common.widget.AnimationNestedScrollView
                    android:id="@+id/mineNestedScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="54dp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <include layout="@layout/order_card" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/functionList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recommendGoodsList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:overScrollMode="never"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </com.aries.common.widget.AnimationNestedScrollView>

            </LinearLayout>

            <include layout="@layout/login_userinfo" />
        </FrameLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/backTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="20dp"
            android:scaleType="fitXY"
            app:fabSize="mini"
            app:borderWidth="0dp"
            app:elevation="@dimen/dp_10"
            app:rippleColor="@color/font_6"
            app:backgroundTint="@color/white"
            android:visibility="gone"
            android:src="@drawable/back_top" />

    </RelativeLayout>
</com.scwang.smart.refresh.layout.SmartRefreshLayout>