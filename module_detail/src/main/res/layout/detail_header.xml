<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detailHeaderLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:paddingTop="42dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|start"
            android:paddingLeft="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_back_grey" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="@dimen/tab_layout_size"
                android:layout_height="wrap_content"
                android:background="@color/color_FAFAFA"
                app:tabMode="fixed"
                app:tabIndicatorHeight="2dp"
                app:tabIndicatorColor="@color/color_E33A3C"
                app:tabIndicator="@drawable/tab_indicator_shape"
                app:tabRippleColor="@color/transparent"
                app:tabTextColor="@color/cl_000000"
                app:tabSelectedTextColor="@color/cl_000000"
                app:tabTextAppearance="@style/TabLayoutTextStyle"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:paddingRight="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/shareIcon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_share_black" />

            <RelativeLayout
                android:id="@+id/threePointsLayout"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/addressLayout"
                app:layout_constraintRight_toRightOf="parent">

                <ImageView
                    android:id="@+id/threePoints"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_ellipsis_black" />

                <TextView
                    android:id="@+id/threePointsBadgeNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/badge_bg"
                    android:minWidth="15dp"
                    android:minHeight="15dp"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/white"
                    android:visibility="visible"
                    android:textSize="9sp"
                    android:text="4"/>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>