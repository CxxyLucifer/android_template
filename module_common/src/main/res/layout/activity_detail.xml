<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.aries.common.widget.AnimationNestedScrollView
            android:id="@+id/scrollerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        </com.aries.common.widget.AnimationNestedScrollView>

        <include layout="@layout/detail_header" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/backTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="20dp"
            android:scaleType="fitXY"
            app:fabSize="mini"
            app:borderWidth="0dp"
            app:elevation="@dimen/dp_10"
            app:rippleColor="@color/font_6"
            app:backgroundTint="@color/white"
            android:visibility="gone"
            android:src="@drawable/back_top"
            android:contentDescription="@string/backTop" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white">
    </LinearLayout>

</LinearLayout>
